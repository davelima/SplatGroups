{% extends 'base.html.twig' %}

{% block body %}

<p class="font-paintball center f18"><big>Log in to view current Squad Battles!</big></p>

<div class="row">
  <div class="col m4 offset-m4 s12">
    <form class="font-paintball">
      <div class="input-field">
        <input id="username" type="text" class="validate" required>
        <label for="username">Username</label>
      </div>
      
      <div class="input-field">
        <input id="password" type="password" class="validate" required>
        <label for="password">Password</label>
      </div>
      
      <p class="center">
        <button type="submit" class="btn btn-large light-green accent-4 waves-effect waves-light">Enter</button>
      </p>
    </form>
  </div>
</div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
