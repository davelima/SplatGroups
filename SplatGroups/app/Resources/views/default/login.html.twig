{% extends 'base.html.twig' %}

{% block body %}

<p class="font-paintball center f18"><big>Log in to view current Squad Battles!</big></p>

<div class="row">
  <div class="col m4 offset-m4 s12">

{% if error %}
  <script type="text/javascript">
  window.onload = function() {
	  Materialize.toast("{{ error.messageKey|trans(error.messageData, 'security') }}", 4000);
  }
  </script>
{% endif %}

    <form class="font-paintball" action="{{ path('login_check') }}" method="post">
      <div class="input-field">
        <input id="username" name="_username" type="text" class="validate" value="{{ last_username }}" required>
        <label for="username">Username</label>
      </div>
      
      <div class="input-field">
        <input id="password" name="_password" type="password" class="validate" required>
        <label for="password">Password</label>
      </div>
      
      <p class="center">
        <button type="submit" class="btn btn-large light-green accent-4 waves-effect waves-light">Enter</button>
      </p>
      
      <input type="hidden" name="_target_path" value="/rooms/" />
    </form>
  </div>
</div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
