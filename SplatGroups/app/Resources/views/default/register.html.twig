{% extends 'base.html.twig' %}

{% block body %}

<div class="page-header">
  <h1 class="font-paintball text-center">SplatGroups</h1>
</div>

<p class="font-paintball text-center"><big>Register to SplatGroups and find players around the world looking for squad battle partners!</big></p>
  
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-12">
    <form class="form font-paintball">
      <div class="form-group">
        <input type="text" name="username" placeholder="Username" class="form-control" required>
      </div>
      
      <div class="form-group">
        <input type="email" name="email" placeholder="Email" class="form-control" required>
      </div>

      <div class="form-group">
        <input type="text" name="nnid" placeholder="Nintendo Network ID" class="form-control" data-toggle="tooltip" data-placement="top" title="Please enter your real NNID, so players can easily add you" required>
      </div>      
      
      <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="form-control" required>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-info btn-block">Register</button>
      </div>
    </form>
  </div>
</div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
