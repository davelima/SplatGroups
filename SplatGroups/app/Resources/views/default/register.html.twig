{% extends 'base.html.twig' %}

{% block body %}

<p class="font-paintball center f18"><big>Register to SplatGroups and find players around the world looking for squad battle partners!</big></p>
  
<div class="row">
  <div class="col m4 offset-m4 s12">
    <form class="font-paintball">
    
      <div class="input-field">
        <input id="username" type="text" class="validate" required>
        <label for="username">Username</label>
      </div>
      
      <div class="input-field">
        <input id="email" type="email" class="validate" required>
        <label for="email">Email</label>
      </div>
      
      <div class="input-field">
        <input id="nnid" type="text" class="validate" required>
        <label for="nnid">Nintendo Network ID</label>
      </div>
      
      <div class="input-field">
        <input id="password" type="password" class="validate" required>
        <label for="password">Password</label>
      </div>
    
      <button type="submit" class="btn orange waves-effect waves-light f18">Register</button>
    </form>
  </div>
</div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
