{% extends 'base.html.twig' %}

{% block body %}

<p class="font-paintball center f18">
Register on SplatGroups and find out people to play Splatoon!
</p>
  
<div class="row">
  <div class="col m4 offset-m4 s12">
  
  
{{ form_start(form, {'attr': {'class': 'font-paintball'}}) }}
  {{ form_widget(form.username, {'attr': {'placeholder': 'Login'}}) }}
  {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
  {{ form_widget(form.nnid, {'attr': {'placeholder': 'Nintendo Network ID'}}) }}
  {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Password'}}) }}
  {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Repeat password'}}) }}

    <p class="center">
      <button type="submit" class="btn btn-large orange waves-effect waves-light f18">Register</button>
    </p>
{{ form_end(form) }}
  </div>
</div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
