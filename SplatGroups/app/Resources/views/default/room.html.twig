{% extends 'base.html.twig' %}

{% block body %}

<div class="font-paintball chat-container">

  <div class="row">
    <div class="col s12">
      <ul class="collection chat">
        <li class="collection-item green accent-3">
          <span class="title">Player 1 <span class="font-roboto badge">10 min</span></span>
          <p class="font-roboto">Random message o/</p>
        </li>
        
        <li class="collection-item grey lighten-3">
          <span class="title">Player 3 <span class="font-roboto badge">8 min</span></span>
          <p class="font-roboto">nananan</p>
        </li>
        
        <li class="collection-item grey lighten-3">
          <span class="title">Player 3 <span class="font-roboto badge">5 min</span></span>
          <p class="font-roboto">nananan</p>
        </li>
        
        <li class="collection-item grey lighten-3">
          <span class="title">Player 3 <span class="font-roboto badge">2 min</span></span>
          <p class="font-roboto">nananan</p>
        </li>
        
        <li class="collection-item grey lighten-3">
          <span class="title">Player 3 <span class="font-roboto badge">1 min</span></span>
          <p class="font-roboto">nananan</p>
        </li>
        
        <li class="collection-item grey lighten-3" id="latest">
          <span class="title">Player 3 <span class="font-roboto badge">1 min</span></span>
          <p class="font-roboto">nananan</p>
        </li>
      </ul>
    </div>
  </div>
  
</div>

<div class="chat-compose">
  <div class="row">
    <div class="col s12">
      <form>
        <div class="row">
          <div class="input-field col s9">
            <input type="text" placeholder="Mensagem">
          </div>
          
          <div class="col s2 valign-wrapper" style="height: 65px;">
            <button type="submit" class="btn-floating indigo lighten-2 valign"><i class="material-icons">send</i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{% endblock %}

